<div class="container">
    <div class="row">
        <div class="col-8">
            <% @posts.each do |post| %>
                <div class="insta-post">
                    <div class="post-meta">
                        <%= post.account.user_name %>
                    </div>
                    <%= image_tag post.main_image, class: "img img-fluid" %>
                </div>
            <% end %>
        </div>
        <div class="col-4">
            <div class="account-summary">
                <p>
                    <strong><%= current_account.user_name %></strong><br/>
                    <%= current_account.full_name %>
                </p>
            </div>
            <div class="follower-suggestions">
            
            </div>
        </div>
    </div>
